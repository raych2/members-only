extends layout

block content
  .welcome 
    if !user
      h1.welcome-message Please sign up or log in
      .post-display 
        each post in post_list
          .post-section
            .post-text
              h2#postTitle !{ post.title }
              p#postMessage !{ post.message }
            hr 
            .post-creation
              p Anonymous
              p #{ post.postDate }
    else if user.member
      h1 Hi #{ user.username }!
      h2.welcome-message Check out the latest posts...
      .post-display 
        each post in post_list
          .post-section
            .post-text
              if user.admin
                .post-header
                  h2 !{ post.title }
                  a.delete-icon(
                    href=post._id + "/delete",
                    aria-labelledby='Delete Post'
                  )
                    i.fas.fa-trash-alt.fa-lg
                p#postMessage !{ post.message }
              else
                h2#postTitle !{ post.title }
                p#postMessage !{ post.message }
            hr 
            .post-creation
              p #{ post.user.fullName } â€¢ @#{ post.user.username }
              p #{ post.postDate }

    else
      h1 Welcome #{ user.username }
      h2.welcome-message Check out the latest posts...
      .post-display 
        each post in post_list
          .post-section
            .post-text
              h2#postTitle !{ post.title }
              p#postMessage !{ post.message }
            hr 
            .post-creation
              p Anonymous
              p #{ post.postDate }
